<h1><%= @user.username %>'s Profile</h1>

<% @user.tweets.each do |tweet| %>
  <%= tweet.message %> <br>
<% end %>

<br>

<% unless current_user.id == @user.id %>
  <% if current_user.friends.include?(@user) %>
    <%= link_to "Unfollow", relationship_path(current_user.relationships.find_by_friend_id(@user)), method: :delete, class: 'btn btn-info btn-xs' %>
  <% else  %>
  <%= link_to "Follow", relationships_path(friend_id: @user), method: :post, class: 'btn btn-info btn-xs' %>
  <% end %>

<% end %>
